{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run C++ with Input/Output",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "g++ -std=c++17 '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' && '${fileDirname}/${fileBasenameNoExtension}' < '${fileDirname}/input.txt' > '${fileDirname}/output.txt'"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated"
      }
    }
  ]
}
